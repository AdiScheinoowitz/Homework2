<h3>Homework3</h3>
@page "/HomeWork3"

<input type="text" @bind="num1" />
<br />
<input type="text" @bind="num2" />
<br />
<input type="text" @bind="num3" />
<br />
<input type="text" @bind="num4" />
<br />
<input type="text" @bind="num5" />
<br />
<input type="button" @onclick="usernumbers" value="click me" />
<input type="button" @onclick="result" value=show results />
<br />
<span> @stresult </span>

@code {
    string num1 = "";
    string num2 = "";
    string num3 = "";
    string num4 = "";
    string num5 = "";
    string stresult = "";
    int maxnum = 0;
    int evennums = 0;
    int suneven = 0;
    List<int> UserNums = new List<int>();
    private void usernumbers()
    {
        UserNums.Add(Convert.ToInt16(num1));
        UserNums.Add(Convert.ToInt16(num2));
        UserNums.Add(Convert.ToInt16(num3));
        UserNums.Add(Convert.ToInt16(num4));
        UserNums.Add(Convert.ToInt16(num5));
        stresult = "now click on show button";
    }
    private void result()
    {
        if (UserNums.Count < 5)
        {
            stresult = "you must put in 5 numbers";
        }
        else
        {
            UserNums.Sort();
            maxnum = UserNums[4];
        }
        foreach (int num in UserNums)
        {
            if (num % 2 == 0)
            {
                suneven++;
                evennums += num;
            }

        }
        stresult = "your numbers sum is: " + (UserNums.Sum()).ToString()
        + " the biggest numer is: " + maxnum.ToString() +
        " your avg even numbers is: " + (evennums /
       suneven).ToString();
    }

}
